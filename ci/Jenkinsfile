pipeline {
    agent any
    stages {
        stage('Build') {
            environment {
                PARALLEL_LEVEL = '4'
                PYTHON_VER = '3.8'
                RAPIDS_VER = '21.10'
                CUDA_VER = '11.4'
            }
            agent {
                docker {
                  image 'gpuci/miniforge-cuda:11.4-devel-ubuntu20.04'
                  label 'cpu'
                }
            }
            steps {
                sh "./ci/scripts/jenkins_build.sh"
                cleanWs (
                    deleteDirs: true,
                    externalDelete: 'sudo rm -rf %s'
                )
            }
        }
    }
}
